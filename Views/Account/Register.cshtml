@model AdventureWorksPhotos.Models.Usuarios
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!-- Metadatos y scripts similares a la página de login -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar similar a la página de login -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <!-- Logo o enlace de la marca -->
            @Html.ActionLink("Aventuras en el trabajo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <!-- Botón de hamburguesa para pantallas pequeñas -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Enlaces de navegación -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Galería", "Index", "Fotos", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Agregar foto", "Create", "Fotos", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Presentación", "Presentacion", "Fotos", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Acerca", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @if (!Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Iniciar Sesión", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Cerrar Sesión", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <section class="vh-200 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card card-custom">
                            <div class="card-body p-5 text-center">

                                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                                {
                                    <h2 class="fw-bold mb-2 text-uppercase">Registro</h2>
                                    <p class="text-white-50 mb-5">¡Únete a nuestra comunidad!</p>

                                    <!-- Campos del formulario con el estilo similar al login -->
                                    <div class="form-outline form-white mb-4">
                                        <input type="text" id="NombreUsuario" name="NombreUsuario" class="form-control form-control-lg" required />
                                        <label class="form-label" for="NombreUsuario">Nombre de Usuario</label>
                                    </div>
                                    <!-- Repite este bloque para los otros campos -->
                                    <div class="form-outline form-white mb-4">
                                        <input type="text" id="Apellido" name="Apellido" class="form-control form-control-lg" required />
                                        <label class="form-label" for="Apellido">Apellido:</label>
                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <input type="email" id="Email" name="Email" class="form-control form-control-lg" required />
                                        <label class="form-label" for="Email">Email:</label>
                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <input type="password" id="Contrasena" name="Contrasena" class="form-control form-control-lg" required />
                                        <label class="form-label" for="password">Contraseña:</label>
                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <input type="password" id="ConfirmarContrasena" name="ConfirmarContrasena" class="form-control form-control-lg" required />
                                        <label class="form-label" for="ConfirmarContrasena">Confirma la contraseña:</label>
                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <select id="Rol" name="Rol" class="form-select form-select-lg mb-3">
                                            <option value="Usuario">Usuario</option>
                                            <option value="Administrador">Administrador</option>
                                        </select>
                                        <label class="form-label" for="Rol">Rol:</label>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <select id="Estado" name="Estado" class="form-select form-select-lg mb-3">
                                            <option value=True>Activo</option>
                                            <option value=False>Inactivo</option>
                                        </select>
                                        <label class="form-label" for="Estado">Estado:</label>
                                    </div>
                                    <button class="btn btn-primary btn-lg px-5" type="submit">Registrarse</button>

                                    <p class="mb-0 mt-4">
                                        ¿Ya tienes cuenta? @Html.ActionLink("Inicia sesión aquí", "Login", "Account", null, new { @class = "fw-bold" })
                                    </p>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer similar al de la página de login -->
        <footer class="bg-light text-center text-lg-start">
            <div class="container p-4">
                <div class="row">
                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase">Universidad Tecnológica de El Salvador</h5>
                        <p>Proyecto de Programación 2</p>
                    </div>

                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase">Equipo de Trabajo</h5>
                        <ul class="list-unstyled mb-0">
                            <li>José Alfonso Escobar Mejía - 2931882022</li>
                            <li>Raul Alejandro Ascencio Trejo - 2941482015</li>
                            <li>Erick Gerardo Fernández Rodríguez - 29-1278-2022</li>
                            <li>Raúl Alejandro Morales Landaverde - 29-1857-2022</li>
                            <li>José Raul Artiga Gutiérrez - 2914522022</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                &copy; @DateTime.Now.Year - Mi aplicación ASP.NET
            </div>
        </footer>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
