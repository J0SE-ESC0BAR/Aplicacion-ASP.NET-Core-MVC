@{
    ViewBag.Title = "Inicio - Adventure Works";
}

<!-- Jumbotron para destacar la aplicación -->
<div class="jumbotron">
    <h1>Adventure Works - Comparte tus Aventuras</h1>
    @if (Request.IsAuthenticated)
    {
        <h2>Bienvenido @User.Identity.Name</h2>
    }
        <p class="lead">Únete a la comunidad de Adventure Works para compartir y descubrir fotos de aventuras increíbles.</p>
        <p><a href="@Url.Action("Index", "Fotos")" class="btn btn-primary btn-lg">Explora la Galería &raquo;</a></p>
    </div>

<!-- Sección de características -->
<div class="row">
    <div class="col-md-4">
        <h2>Comparte tus Momentos</h2>
        <p>
            Carga y comparte tus fotos de aventuras al instante. Añade títulos, descripciones y más a tus fotos.
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Create", "Fotos")">Compartir Ahora &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Descubre Nuevas Aventuras</h2>
        <p>Explora la colección de fotografías de aventuras de otros usuarios y encuentra inspiración para tus próximos viajes.</p>
        <p><a class="btn btn-default" href="@Url.Action("Index", "Fotos")">Ver Galería &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Únete a la Comunidad</h2>
        <p>Participa en nuestra comunidad, comenta y comparte tus experiencias sobre las fotos de aventuras.</p>
        <p><a class="btn btn-default" href="@Url.Action("Register", "Account")">Regístrate Ahora &raquo;</a></p>
    </div>
</div>
